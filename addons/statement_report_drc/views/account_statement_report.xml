    <record id="paperformat_euro_lowmargin_inherited" model="report.paperformat">
        <field name="name">European A4 low margin Duplicate</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">40</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">80</field>
    </record>

    <report id="report_account_statement" string="Account Statement" model="account.statement.wizard" report_type="qweb-pdf" name="statement_report_drc.account_statement_report" file="statement_report_drc.account_statement_report" menu="False" paperformat="statement_report_drc.paperformat_euro_lowmargin_inherited"/>


